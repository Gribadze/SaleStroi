@model IEnumerable<IdentityMvc.Models.Tovar>

@{
    ViewBag.Title = "Список доступных товаров";
}

<h2>@ViewBag.Title</h2>


@if (User.IsInRole("admin") || User.IsInRole("moder"))
{<p>
        @Html.ActionLink("Добавить товар", "Create")
 </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TovarName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Def)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TovarName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Def)
        </td>
        <td>
            @Html.ActionLink("Подробнее ", "Details", new { id = item.Id }) 

@if (User.IsInRole("admin") || User.IsInRole("moder"))
{
    @Html.ActionLink("Редактировать ", "Edit", new { id = item.Id })    

    @Html.ActionLink("Удалить ", "Delete", new { id = item.Id })
}

        </td>
    </tr>
}

</table>
